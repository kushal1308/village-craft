{% assign var_co = 0 %}
<div class="page-width work_new_page m_top">
<h2 class="text-align-center">{{ section.settings.text }}</h2>
<p class="text-align-center">{{ section.settings.textarea }}</p>
<div class="image_workflow d-flex flex-direction-row-reverse">  <img src="{{ section.settings.image | img_url: 'master' }}" height="" width="" alt="image" />
<ul class="d-flex flex-direction-column justify-content-space-between"> {%  for block in section.blocks %}
<li class="work_new_process text-align-center" style="background-color:{{ block.settings.bg_color }}">
<div class="work_new_data">
    <h4 class="font-family-Neuzeit text-align font-weight-500 font-size-30px line-height-39px text-transform-uppercase color-off-white"><span></span>{{ block.settings.text_name }}</h4>  <p>{{ block.settings.details }}</p> 
</div>
</li>  {% endfor %} </ul>
</div>

{% if section.settings.button_text != blank %} <div class="text-align-center btn_urt">  <a href="{{ section.settings.button_url }}" class="btn font-family-Neuzeit font-weight-700 font-size-18px line-height-21px letter-spacing-0px color-black-000 bg-color-off-white border-light-black-000 border-1px border-radius-37px text-transform-inherit d-inline-block">{{ section.settings.button_text }}</a>  </div> {% endif %} </div> 
