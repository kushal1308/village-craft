"id": "textarea",
"label": "Textarea"
},
{
"type" : "image_picker",
"id": "image",
"label": "Image"
},
{
"type" : "text",
"id" : "button_text",
"label": "Button Text"
},
{
"type" : "url",
"id" : "button_url",
"label": "Button url"
}
],
"blocks": [
{
"type": "work_new",
"name": "work_new",
"settings": [
{
"type": "text",
"label": "Text",
"id": "text_name"
},
{
"type": "richtext",
"label": "Textarea",
"id": "details"
},
{
"type": "color",
"label": "Background Color",
"id": "bg_color"
}
]
}
],
"presets": [  {
"name": "work New",
"category": "work New"
} ]
}
{% endschema %}

