                      endif

                      assign has_vol_pricing = false
                      if item.variant.quantity_price_breaks.size > 0
                        assign has_vol_pricing = true
                      endif
                    -%}
                    <td class="cart-item__quantity small-hide {% if has_qty_rules or has_vol_pricing %} cart-item__quantity--info{% endif %}">
