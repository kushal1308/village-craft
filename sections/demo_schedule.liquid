<div class="page-width work_new_page m_top">
    <div class="mar_pos">  <img src="{{ section.settings.bg_image | img_url: 'master' }}" class="back_img_l" alt="img" height="" width="" /> 
    <div class="image_text_data d-flex align-items-center">
    <div class="dis_text">
    {% if section.settings.text != blank %}<h2 class="text-align">{{ section.settings.text }}</h2> {% endif %}
    {% if section.settings.textarea != blank %}<p class="text-align-center">{{ section.settings.textarea }}</p> {% endif %}
    {% if section.settings.schedula_text != blank %}<a href="{{ section.settings.schedula_url }}" target="_blank" class="btn font-family-Neuzeit font-weight-700 font-size-18px line-height-21px color-black-000 letter-spacing-0px bg-color-off-white border-light-black-000 border-1px border-radius-37px">{{ section.settings.schedula_text }}</a> {% endif %}
    {% if section.settings.text_dis != blank or section.settings.discun_code != blank or section.settings.image_picker != blank %}
    <div class="discound_code">
    {% if section.settings.text_dis != blank %} <p> {{ section.settings.text_dis }} </p> {% endif %}
    <div class="discound_btn">
    {% if section.settings.discun_code != blank %}   
    <p class="discound_code"><span><input type="text" value ="{{  section.settings.discun_code }}" id="discound_co" ></span>
    <img src = "{{ section.settings.image_picker | image_url : width : 40 }}" alt="img" width='' height='' loading="lazy">  </p>
    {% endif %}
    </div>
    </div>
    {% endif %}
    <div class="product_appears">
    {% for i in (1..3) %}
      {% assign product_count  =  'product_' | append : i %}
      {% assign prod_title = 'title_' | append : i %}
      {% assign product = section.settings[product_count] %}
      {% assign product_title = section.settings[prod_title] %}
     {% if product %}
       {% if section.settings.product.featured_image != blank %}
      <div class="product_data">
      <div class="product_img"> <a href="{{ product.url }}"> <img src="{{ product.featured_image | image_url : width: 250 }}" width="" height="" alt="img" loading="lazy" /> </a></div>
      <p><a href="{{ product.url }}">{% if product_title != blank %}<span>{{ product_title }}</span> {% else %}<span>{{ product.title }}</span>{% endif %}</a></p><br>
      </div>
         {% endif %}
      {% endif %}
    {% endfor %}
    </div>
    </div>
    <div class="di_im"> <img src="{{ section.settings.Image | img_url: 'master' }}" height="" width="" alt="img" /></div>
    </div>  </div>  </div>
