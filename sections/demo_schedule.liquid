    <style>
        .demo_schedule .image_text_data {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .mar_pos {
            position:relative;
            line-height:0px;
        }
        .dis_text {
            width: 52%;
            padding-left: 28px;
        }
        .di_im {
            width: 48%;
        }
        .demo_schedule .image_text_data .dis_text a {
            padding: 11px 36.5px;
            text-transform: uppercase;
            margin-top: 30px;
            display: inline-block;
        }
        .demo_schedule .image_text_data .dis_text h2 {
            margin-right: -25%;
            text-align: start !important;
        }
        .demo_schedule .image_text_data .dis_text p {
            margin: 0;
        }
        img.back_img_l {
            width: 100%;
        }
        .di_im img {
            width:auto;
        }
        @media (max-width: 1366px){
            .demo_schedule .image_text_data .di_im {
                max-width: 84%;
                margin-bottom: 0;
                margin-top: auto;
                height: -webkit-fill-available;
            }
            .di_im img{
                height: -webkit-fill-available;
            }
        }
        @media (max-width: 749px){
            .demo_schedule .image_text_data .dis_text h2{
                margin-right: 0;
            }
            .demo_schedule .image_text_data .di_im {
                margin: auto;
                height: auto;
            }
            .demo_schedule .image_text_data {
                flex-direction: column;
            }
            .dis_text {
                width: 100%;
                padding: 15px !important;
            }
            .demo_schedule .mar_pos .back_img_l {
                display: none;
            }
            .demo_schedule .mar_pos {
                background-color: #f6f3ee;
                border: 1px solid #7FA9A4;
                border-radius: 20px;
            }
            .demo_schedule .image_text_data {
                position: unset;
                display: block;
            }
            .di_im img {
                height:auto;
                width:auto;
                max-width: 100%;
                max-height: 100%;
            }
            .di_im {
                width:100%;
            }
            .demo_schedule .image_text_data .dis_text a {
                padding: 10px 30px;
                display: table;
                margin: 15px auto 0;
            }
        }
        @media (max-width: 480px){
            .demo_schedule .image_text_data .dis_text h2 {
                font-size: 22px;
                text-align: center !important;
            }
        }
    </style>