        <li class="font-size-18px min_height_li border-light-grey font-weight-700 color-black text-transform-uppercase border-1px-bottom border-1px-right text-align-center d-flex align-items-center justify-content-center">{% if request.locale.iso_code == 'fr' %} PRIX NET {% else %}NET PRICE{% endif %}</li></ul>   

    <div class="wholesale_table_blo d-flex">
    {% for i in (1..5) %}
    {% assign who_table = 'richtext_' | append: i %}
    {% assign products = block.settings[who_table]  | split: "#" %}
    <ul class="whole_table_colu border-light-grey border-1px-right text-align-center p-0px m-0px list-style-none {{ block.settings.text_name }}">{% for product in products %}
        <li class="col text-transform-uppercase font-weight-700 font-size-18px line-height-23-4px font-family-Neuzeit color-gray border-1px-bottom border-light-grey d-flex align-items-center justify-content-center">
            <span>{{ product }}</span>
        </li>
    {% endfor %}
    </ul>
    {% endfor %} 
    </div> 
    </div> 
    {% endif %}
    {% if block.settings.textarea != blank  %}<div class="scent_product border-radius-20px border-1px border-light-grey">
        <div class="wholesale_textare bg-color-off-white border-light-grey border-1px-bottom text-align-center font-size-18px line-height-23-4px color-black font-weight-700 text-transform-uppercase d-flex align-items-center justify-content-center">
            {{ block.settings.text_cont }}
        </div>
        <p class="collection_product font-size-18px line-height-23-4px font-family-Neuzeit m-0px color-gray d-flex align-items-center justify-content-center font-weight-700">{{ block.settings.textarea }}</p></div>{% endif %}
    {% if block.settings.collection != blank  %}
    <div class="collection_product"> {% for collection in collections[block.settings.collection].products  %}
    <div class="collection_title d-inline-block"><a href="{{ collection.url }}" target="_blank" class="product-card__title font-family-Neuzeit font-size-18px line-height-23-4px p-0px font-weight-700 color-black text-transform-uppercase">{{ collection.title }}</a></div>
    {% endfor %} </div>
    {% else %}
