    <script>
        const update = (e) => {
            let tabValue = e.target.getAttribute('value')
            let doc = document.getElementsByClassName('img_select');
            let content = document.getElementsByClassName('wholesale_candle');
            for(let i = 0;  i < doc.length; i++){
                if(doc[i].getAttribute('value') === tabValue){
                    doc[i].classList.add("active");                    
                }else{
                    doc[i].classList.remove("active");
                }
            }
            for(let j = 0;  j < content.length; j++){
                if(content[j].getAttribute('data-title') === tabValue){
                    content[j].classList.add("active");                    
                }else{
                    content[j].classList.remove("active");
                }
            }

        }
