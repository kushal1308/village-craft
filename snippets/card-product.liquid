            {%- endif -%}

            <span class="caption-large light">{{ block.settings.description | escape }}</span>
            {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}
            <div class="m-0px-0px-10px-0px">
              {%- if card_product.available == false -%}
                <span
                  id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                  class="color-dark-black border-1px border-black font-weight-300 text-transform-uppercase bg-color-white border-radius-2px font-size-6em padding-4px-38px"
                >
                  {{- 'products.product.sold_out' | t -}}
                </span>
              {%- elsif card_product.compare_at_price > card_product.price and card_product.available -%}
              {% assign saving = card_product.compare_at_price | minus: card_product.price | times: 100 | divided_by: card_product.compare_at_price | round %}
              
                <span
                  id="NoMediaStandardBadge-{{ section_id }}-{{ card_product.id }}"
                  class="sale font-weight-300 text-transform-uppercase font-family-Neuzeit border-radius-2px font-size-6em padding-4px-38px"
                >
                  {{ 'products.product.on_sale' | t }} | {{ saving }}% OFF
                </span>
              {%- endif -%}
            </div>
            {% comment %}
