        <div class="product_coloropti" data-prod="{{ card_product.title }}" data-hand="{{ card_product.handle }}">
          <div class="product_variant_option">
            {%- for option in card_product.options_with_values -%}
              {%- for value in option.values -%}
                {% for variant in card_product.variants %}
                  {%- assign display = 'block' -%}
                  {% if variant.image and variant.title contains value %}
                    {%- assign img = variant.image | img_url: 'large' -%}
                    {%- assign var_id = variant.id -%}
                    {% break %}
                    {%- assign display = 'none' -%}
                  {% endif %}
                {% endfor %}
              
                {% if option.name contains 'Color' or option.name contains "Couleur" %}
                  <div class="variant_divval">
                    <div class="variant_cuatom_se {% if forloop.index == 1 %}active{% endif %}">
                      <input
                        type="radio"
                        id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                        name="{{ option.name }}"
                        value="{{ value | escape }}"
                        form="{{ card_product_form_id }}"
                        {% if forloop.index == 1 %}
                          checked
                        {% endif %}
                        {% if option_disabled %}
                          class="disabled"
                        {% endif %}
                      >

                      {% assign value_hadle = value | handleize %}
                      {% assign img_name = card_product.handle | append: '-' | append: value_hadle | append: '.png' %}

                      {% if images[img_name] != blank %}
                        {% assign img = images[img_name] | image_url %}
                      {% endif %}

                      <label
                        data-img_name="{{ img_name }}"
                        data_var_img="{{ img }}"
                        data_variant_id="{{ var_id }}"
                        class="variant_label color-swatch {% if images[img_name]!= blank %}color_imgs{% endif %}"
                        for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                        style="background-image:url({{img}});width:25px;height:25px;display:inline-block;background-position:center;background-size: auto;padding: 0;border: 1px solid #000;"
                      >
                        <span class="checkmark"></span>
                      </label>
                      <p class="col_color_name" style="">{{ value | split: '-' | first }}</p>
                    </div>
                  </div>
                {% else %}

